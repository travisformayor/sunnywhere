<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <link rel="stylesheet" href="css/normalize.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
  <link rel="stylesheet" type="text/css" href="css/main.css">

  <script defer src="js/jquery-3.4.1.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
  <script defer src="js/app.js"></script>

  <title>Sunny Where? - by Travis Uhrig</title>
</head>
<body>
  <main>
  
    <div class="ui grid center aligned">
      <div class="sixteen wide column">
        <div class="ui search">
          <div class="ui icon input">
            <input class="prompt" type="text" placeholder="Find your city...">
            <i class="search icon"></i>
          </div>
          <div class="results"></div>
        </div>
      </div>
    </div>

    <div class="ui centered card">
      <div class="content">
        <div id="city-name" class="header center aligned"></div>
        <div id="latlon" class="meta center aligned"></div>
        <div id="distance" class="description center aligned"></div>
      </div>
    </div>

    <table class="ui celled table">
      <thead>
        <tr>
          <th></th>
          <th>City</th>
          <th>City ID</th>
          <th>Weather</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody id="city-list">
        <!-- js inserts city results here -->
        <% cities.sort((a, b) => a.type.localeCompare(b.type)).forEach(city => { %>
          <% if (city.type === 'Clear') { %>
            <tr class="positive">
          <% } else { %>
            <tr class="negative">
          <% } %>
            <td>
              <% if (city.typeShorthand) { %>
                <img 
                  src="https://www.metaweather.com/static/img/weather/<%= city.typeShorthand %>.svg"
                  class="ui mini centered image"
                >
              <% } %> 
            </td>
            <td data-label="City"><%= city.name %></td>
            <td data-label="City ID"><%= city.woeid %></td>
            <td data-label="Weather State" class="result"><%= city.type === 'Clear' ? 'Sunny' : city.type %></td>
            <td data-label="Weather Date"><%= city.entryDate.toDateString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
  
</body>
</html>